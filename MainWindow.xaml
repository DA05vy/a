<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="TX2" Height="650" Width="600"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid Margin="10">
        <!--Tao grid 9 dong 2 cot -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- Dong 1 -->
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
               Content="Quản lý thông tin nhân viên"
               FontSize="40" Foreground="Blue"
               HorizontalAlignment="Left" Margin="39,0,0,0" Width="502"/>
        <!-- Tao duong vien tu dong 2 den 8 -->
        <Border Grid.Column="0"
                Grid.ColumnSpan="2"
                Grid.RowSpan="9"
                BorderThickness="2"
                BorderBrush="Green"
                Background="Beige" Margin="0,63,0,40"/>

        <!-- Dong 2 -->
        <Label Grid.Row="1" Grid.Column="0"
               Content="Ma nhan vien"
               Style="{StaticResource labelStyle}" Margin="10,10,10,0"/>
        <TextBox x:Name="txtMa" Grid.Row="1" Grid.Column="1"
                 Style="{StaticResource textBoxStyle}" Margin="10,11,0,0" Width="150"/>

        <!-- Dong 3 -->
        <Label Grid.Row="2" Grid.Column="0"
               Content="Ho ten"
               Style="{StaticResource labelStyle}" Margin="10,10,10,0"/>
        <TextBox x:Name="txtHoTen" Grid.Row="2" Grid.Column="1"
                 Style="{StaticResource textBoxStyle}" Margin="10,11,0,0" Width="150"/>

        <!-- Ding 4 -->
        <Label Grid.Row="3" Grid.Column="0"
               Content="Ngay Sinh"
               Style="{StaticResource labelStyle}" Margin="10,10,10,0"/>
        <DatePicker x:Name="dpNgaySinh" Grid.Row="3" Grid.Column="1"
                    Margin="10,11,0,0"
                    Width="200"
                    HorizontalAlignment="Left"/>

        <!-- Dong 5 -->
        <Label Grid.Row="4" Grid.Column="0"
                Content="Gioi Tinh"
               Style="{StaticResource labelStyle}" Margin="10,10,10,0"/>
        <StackPanel Grid.Row="4" Grid.Column="1"
                    Margin="10,10,10,0"
                    Orientation="Horizontal">
            <RadioButton x:Name="radNam" VerticalContentAlignment="Center"
                         IsChecked="True">Nam</RadioButton>
            <RadioButton x:Name="radNu" Margin="20,0,0,0"
                         VerticalContentAlignment="Center">Nu</RadioButton>
        </StackPanel>

        <!-- Dong 6 -->
        <Label Grid.Row="5" Grid.Column="0"
                Content="Phong ban"
               Style="{StaticResource labelStyle}" Margin="10,10,10,0"/>
        <ComboBox Name="cboPhongBan" Grid.Row="5" Grid.Column="1"
                  Margin="10,10,0,0" Width="250"
                  HorizontalAlignment="Left"
                  SelectedIndex="0">
            <ComboBoxItem>To Chuc</ComboBoxItem>
            <ComboBoxItem>Ke hoach</ComboBoxItem>
            <ComboBoxItem>Vat tu</ComboBoxItem>
        </ComboBox>

        <!-- Dong 7 -->
        <Label Grid.Row="6" Grid.Column="0"
                Content="He so Luong"
               Style="{StaticResource labelStyle}" Margin="10,10,10,33" Grid.RowSpan="2"/>
        <TextBox x:Name="txtHeSoLuong" Grid.Row="6" Grid.Column="1"
                 Style="{StaticResource textBoxStyle}" Margin="10,10,0,1" Width="150"/>

        <!-- Dong 8 -->
        <DataGrid x:Name="dtgNhanVien" Grid.Row="7" Grid.Column="0"
                  Grid.ColumnSpan="2" Margin="10,10,10,10"
                  AutoGenerateColumns="False"
                  ColumnHeaderStyle="{StaticResource dataGridColumnHeaderStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ma nhan vien" Binding="{Binding MaNV}"/>
                <DataGridTextColumn Header="Ho ten" Binding="{Binding HoTen}"/>
                <DataGridTextColumn Header="Gioi tinh" Binding="{Binding GioiTinh}"/>
                <DataGridTextColumn Header="Phong ban" Binding="{Binding PhongBan}"/>
                <DataGridTextColumn Header="He so luong" Binding="{Binding HeSoLuong}"/>
                <DataGridTextColumn Header="Ngay sinh" Binding="{Binding NgaySinh, StringFormat=dd-MM-yyyy}"/>
                <DataGridTextColumn Header="Tuoi" Binding="{Binding Tuoi}"
                                    CellStyle="{StaticResource dataGridCellStyle}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Dong 9 -->
        <StackPanel Grid.Row="8" Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button x:Name="btnThem" Margin="10"
                    Click="btnThem_Click"
                    Template="{StaticResource buttonTemplate}"
                    Style="{StaticResource buttonStyle}"
                    >Them</Button>
            <Button x:Name="btnWindow2" Margin="10"
                    Click="btnWindow2_Click"
                    Template="{StaticResource buttonTemplate}"
                    Style="{StaticResource buttonStyle}"
                    >Window2</Button>
        </StackPanel>

    </Grid>
</Window>
