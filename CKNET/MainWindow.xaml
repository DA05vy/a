<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" 
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!--dong 1-->
        <Label Grid.ColumnSpan="2"
               HorizontalAlignment="Center"
               FontWeight="Bold"
               FontSize="30">Quản lý sản phẩm</Label>
        
        <!--dong 2-->
        <Label Grid.Row="1" Margin="10"
               VerticalAlignment="Center">Mã sản phẩm:</Label>
        <TextBox x:Name="txtMa"
                 Grid.Row="1" Grid.Column="1"
                 Width="120" Height="30"
                 Margin="10"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"/>

        <!--dong 3-->
        <Label Grid.Row="2" Margin="10,0,10,10"
               VerticalAlignment="Center">Tên sản phẩm:</Label>
        <TextBox x:Name="txtTen"
                 Grid.Row="2" Grid.Column="1"
                 Width="300" Height="30"
                 Margin="10"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"/>

        <!--dong 4-->
        <Label Grid.Row="3" Margin="10"
               VerticalAlignment="Center">Số lượng:</Label>
        <TextBox x:Name="txtSoLuong"
                 Grid.Row="3" Grid.Column="1"
                 Width="100" Height="30"
                 Margin="10"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"/>
        
        <!--dong 5-->
        <Label Grid.Row="4" Margin="10"
               VerticalAlignment="Center">Đơn giá:</Label>
        <TextBox x:Name="txtDonGia"
                 Grid.Row="4" Grid.Column="1"
                 Width="100" Height="30"
                 Margin="10"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"/>
        
        <!--dong 6-->
        <Label Grid.Row="5" Margin="10"
               VerticalAlignment="Center">Mã loại:</Label>
        <!--<TextBox x:Name="txtMaLoai"
                 Grid.Row="5" Grid.Column="1"
                 Width="120" Height="30"
                 Margin="10"
                 HorizontalAlignment="Right" 
                 VerticalAlignment="Center"/> -->
        <ComboBox Name="cboLoai" Grid.Row="5" Grid.Column="1"
                  Margin="10" VerticalAlignment="Center"
                  HorizontalAlignment="Left"
                  Width="120" Height="30"/>

        <!--dong 7-->
        <DataGrid x:Name="dtgSanPham" 
                  Grid.Row="6" Grid.ColumnSpan="2"
                  Margin="10"
                  AutoGenerateColumns="False"
                  ColumnHeaderStyle="{StaticResource dataGridColumnHeaderStyle}" SelectionChanged="dtgSanPham_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã sản phẩm"
                                    Binding="{Binding MaSp}"/>
                <DataGridTextColumn Header="Tên sản phẩm"
                                    Binding="{Binding TenSp}"/>
                <DataGridTextColumn Header="Tên loại sản phẩm"
                                    Binding="{Binding TenLoai}"/>
                <DataGridTextColumn Header="Đơn giá"
                                    Binding="{Binding DonGia}"/>
                <DataGridTextColumn Header="Số lượng"
                                    Binding="{Binding SoLuong}"/>
                <DataGridTextColumn Header="Thành tiền" Width="*"
                                    Binding="{Binding ThanhTien, StringFormat=N0}"
                                    Foreground="Red"/>
            </DataGrid.Columns>
        </DataGrid>

        <!--dong 8-->
        <StackPanel Grid.Row="7" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button x:Name="btnThem"
                    Height="30" Width="100" Margin="10"
                    Click="btnThem_Click">Thêm</Button>
            <Button x:Name="btnSua"
                    Height="30" Width="100" Margin="10" 
                    Click="btnSua_Click">Sửa</Button>
            <Button x:Name="btnXoa"
                    Height="30" Width="100" Margin="10"
                    Click="btnXoa_Click">Xóa</Button>
            <Button x:Name="btnTim"
                    Height="30" Width="100" Margin="10"
                    Click="btnTim_Click">Tìm</Button>

        </StackPanel>
    </Grid>
</Window>
